@(tasks: List[Task])

@main("Task Tracker") {
	
	<h2>Task Tracker</h2>
	
	<div>
		<form action = "@routes.TaskController.newTask()" method = "post">
			<input type="text" name="taskName" placeholder = "Add a new Task" required>
			<input type="submit" value="Add">
		</form>
		
		<div>
			<ul>
				@tasks.map { task =>
					<li>
						@task.name
					</li>
					<input type="button" value="delete" action="@routes.TaskController.deleteTask(task.id)"/>
				}
			</ul>
		</div>
	
	</div>
}
